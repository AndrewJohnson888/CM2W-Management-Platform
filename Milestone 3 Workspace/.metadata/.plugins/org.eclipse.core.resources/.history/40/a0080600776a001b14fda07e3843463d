import java.util.ArrayList;

public class ControllerLocator {
	
	private PersistenceInterface pi;

	public ControllerLocator(){
		
		this.pi = new PersistenceInterface();
	}
	
	public void locateMachine(boolean hasCondiments, String drink, String street, int zip){
		
		ArrayList<String> recipe = this.pi.getRecipe(drink);
		
		String machineType = "Simple";
		
		if (hasCondiments) machineType = "Automated";
		if (recipe != null) machineType = "Programmable";
		
		int machineID = this.pi.findMachine(machineType, street, zip);
	}
}
