import java.util.ArrayList;

public class ControllerLocator {
	
	private PersistenceInterface pi;

	public ControllerLocator(){
		
		this.pi = new PersistenceInterface();
	}
	
	public void locateMachine(boolean hasCondiments, String drink, String street, long zip){
		
		ArrayList<String> recipe = this.pi.getRecipe(drink);
		int machineID = this.pi.findMachine(hasCondiments, recipe == null, street, zip);
	}
}
