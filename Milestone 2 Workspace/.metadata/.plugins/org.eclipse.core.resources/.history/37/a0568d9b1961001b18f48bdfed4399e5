
public class SimpleOrder extends Order{
	
	private int orderID;
	private String drink;
	private int controllerID;
	private int coffeeMachineID;
	private String orderType;

	public SimpleOrder(int orderID, String drink, int controllerID, int coffeeMachineID){
		
		this.orderID = orderID;
		this.drink = drink;
		this.controllerID = controllerID;
		this.coffeeMachineID = coffeeMachineID;
		this.orderType= "Simple";
	}
	
	public void print(){
		
		System.out.println(this.orderID);
		System.out.println(this.drink);
		System.out.println(this.controllerID);
		System.out.println(this.coffeeMachineID);
	}

	@Override
	public int getControllerID() {

		return this.controllerID;
	}

	@Override
	public String getOrderType() {
		// TODO Auto-generated method stub
		return null;
	}
}
