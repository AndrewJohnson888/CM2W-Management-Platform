public class Main {
	
	private static final int NUMBER_OF_APPS = 1;

	public static void main(String args[]){
		
		CoffeeProductionSubsystem cps = new CoffeeProductionSubsystem();
		
		for (int i = 0; i < NUMBER_OF_APPS; i++) new MobileOrderingApp(cps);
	}
	
	public static void simulateDelay(int seconds){
		
		try {
			
			TimeUnit.SECONDS.sleep(seconds);
		} 
		
		catch (InterruptedException e) {

			e.printStackTrace();
		}
	}
}
